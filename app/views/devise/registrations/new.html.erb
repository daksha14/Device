<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5 shadow">
        <div class="card-body">
          <h1 class="card-title text-center">Sign up</h1>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

            <% if resource.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <%= resource.errors.full_messages.join(', ') %>
                <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :firstname %>
              <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :lastname %>
              <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit 'Register Now', class: "btn btn-lg btn-success btn-block" %>
            </div>

            <div class="form-group text-center">
              <%= link_to 'Log in', new_session_path(resource_name) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>